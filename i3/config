        }

    }
    ##STOP THEMING BAR

    ##START THEMING WM
    #Theme name : ArcoLinux Dracut

    # Window color settings
    # class                 border  backgr. text    indicator
    client.focused          #ffcfaf #ffcfaf #e5e5e5 #ffcfaf
